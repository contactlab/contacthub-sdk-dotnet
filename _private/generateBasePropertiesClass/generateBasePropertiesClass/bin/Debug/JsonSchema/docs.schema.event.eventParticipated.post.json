{
  "$schema": "http://api.contactlab.it/hub#",
  "type": "object",
  "description": "Customer has participated to an event",
  "properties": {
    "customerId": {
      "type": "string",
      "pattern": "^.+$"
    },
    "bringBackProperties": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "$ref": "https://api.contactlab.it/hub/v1/docs/schema/enums.json#/definitions/EventBringBackProperties"
        }
      ]
    },
    "type": {
      "$ref": "https://api.contactlab.it/hub/v1/docs/schema/enums.json#/definitions/EventType"
    },
    "context": {
      "$ref": "https://api.contactlab.it/hub/v1/docs/schema/enums.json#/definitions/EventContext"
    },
    "date": {
      "type": "string",
      "format": "date-time"
    },
    "contextInfo": {
      "$ref": "https://api.contactlab.it/hub/v1/docs/schema/event/context/context.post.json"
    },
    "properties": {
      "type": "object",
      "properties": {
        "eventId": {
          "type": "string",
          "description": "The idenfier of the event"
        },
        "eventName": {
          "type": "string",
          "description": "The name of the event"
        },
        "eventDate": {
          "type": "string",
          "description": "The date-time of the event",
          "format": "date-time"
        },
        "extraProperties": {
          "type": "object",
          "description": "Extra pieces of information you can tie to events you track"
        }
      }
    }
  },
  "required": [
    "type",
    "context"
  ],
  "additionalProperties": false
}